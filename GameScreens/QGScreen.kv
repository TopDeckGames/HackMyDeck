#:kivy 1.8
#:import kivy kivy

<QGScreen>:
    id: base

    BoxLayout:
	    orientation: "vertical"
	    size: root.size
	    pos: root.pos

        RelativeLayout:
            canvas.before:
                Color:
                    rgba: 0.6, 0.8, 0.9, 1
                Rectangle:
                    pos: (0, 0)
                    size: self.size
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    points: [0, 0, 0, self.size[1], self.size[0], self.size[1], self.size[0], 0, 0, 0]
                    width: 2

            size_hint: (1, 0.06)


            Label:
                pos_hint: {'x': 0.025, 'y': 0}
                size_hint: (0.3, 1)
                text: "Cr√©dits : " + str(root.credits)
                halign: "left"
                valign: "middle"
                bold: True
                font_size: '18sp'
                text_size: self.size
                color: [0, 0, 0, 1]

            Button:
                id: cmdAttack
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: (0.08, 0.8)
                text: "Attaquer"
                bold: True
                background_color: [0.6, 0, 0, 1]
                background_normal: ''

            Spinner:
                id: spnActions
                pos_hint: {'right': 0.99, 'center_y': 0.5}
                size_hint: (0.15, 0.9)

        RelativeLayout:
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: (0, 0)
                    size: self.size

            id: container
            size_hint: (1, 0.93)